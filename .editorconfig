# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 130

[*.{ts,js,json}]
indent_size = 2

[*.go]
indent_style = tab

[*.cs]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.txt]
insert_final_newline = false
end_of_line = crlf
